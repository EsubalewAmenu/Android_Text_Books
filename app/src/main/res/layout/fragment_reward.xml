<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RewardFragment">

    <!-- Rewards Summary -->
    <TextView
        android:id="@+id/totalRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_rewards"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/pendingRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pending_0"
        android:textSize="14sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/paidRewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paid_0"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Order Payment Button -->
    <Button
        android:id="@+id/orderPaymentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_payment"
        android:layout_marginBottom="16dp" />

    <!-- Rewards List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rewardsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Load More Button -->
    <Button
        android:id="@+id/loadMoreButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load_more" />
</LinearLayout>
