<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/freelancer" />

            <TextView
                android:id="@+id/termsTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. There must to be sufficient detail in the content. To make the quiz easier for readers to understand, please provide more detailed explanation."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/termsTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. The lesson material should not contain any emoji or hashtags unless absolutely essential"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/termsTextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Avoid misspellings and ambiguous information."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/termsTextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Must follow proper formatting"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/acceptCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept terms and conditions"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="282dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:text="Accept &amp; Continue"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal" />

</LinearLayout>
